@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link rel="stylesheet" href="~/Mytheme/portfolio/css/components/search.css">
}


<!-- PAGE HEADER -->
<section class="section" style="padding-top: 150px; padding-bottom: 20px; background: var(--bg-secondary);">
    <div class="container">
        <div class="section-header" data-aos="fade-up">
            <p class="section-subtitle">Çalışmalarım</p>
            <h1 class="section-title">Projeler</h1>
            <div class="section-line"></div>
        </div>
    </div>
</section>

<!-- PORTFOLIO SECTION -->
<section class="section portfolio-section" style="padding-top: 40px;">
    <div class="container">
        <!-- Search Box -->
        <div class="search-box" data-aos="fade-up" id="portfolioSearch">
            <input type="text" class="search-input" id="portfolioSearchInput" placeholder="Projelerde ara...">
            <button class="search-clear" id="portfolioSearchClear"><i class="fas fa-times"></i></button>
            <i class="fas fa-search search-icon"></i>
        </div>

        <!-- Filter Buttons -->
        <div class="portfolio-filters" data-aos="fade-up" style="margin-bottom: 50px;">
            <button class="filter-btn active" data-filter="*">Tümü</button>
            <button class="filter-btn" data-filter="web">Web</button>
            <button class="filter-btn" data-filter="mobile">Mobil</button>
            <button class="filter-btn" data-filter="saas">Micro SaaS</button>
        </div>

        <!-- Portfolio Grid -->
        <div class="portfolio-grid">
            <!-- Project 1 - Web -->
            <div class="portfolio-item portfolio-card" data-category="web" data-aos="fade-up">
                <div class="portfolio-image">
                    <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=600&h=400&fit=crop"
                         alt="E-Commerce Platform">
                    <div class="portfolio-overlay">
                        <button type="button" class="btn-icon" data-bs-toggle="modal"
                                data-bs-target="#projectModal1">
                            <i class="fas fa-eye"></i>
                        </button>
                        <a href="#" target="_blank" class="btn-icon"><i class="fas fa-external-link-alt"></i></a>
                    </div>
                </div>
                <div class="portfolio-info">
                    <span class="portfolio-category">Web Uygulama</span>
                    <h4>E-Ticaret Platformu</h4>
                    <div class="portfolio-tags">
                        <span class="portfolio-tag">React</span>
                        <span class="portfolio-tag">Node.js</span>
                        <span class="portfolio-tag">MongoDB</span>
                    </div>
                </div>
            </div>

            <!-- Project 2 - Mobile -->
            <div class="portfolio-item portfolio-card" data-category="mobile" data-aos="fade-up"
                 data-aos-delay="100">
                <div class="portfolio-image">
                    <img src="https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=600&h=400&fit=crop"
                         alt="Fitness App">
                    <div class="portfolio-overlay">
                        <button type="button" class="btn-icon" data-bs-toggle="modal"
                                data-bs-target="#projectModal2">
                            <i class="fas fa-eye"></i>
                        </button>
                        <a href="#" target="_blank" class="btn-icon"><i class="fas fa-external-link-alt"></i></a>
                    </div>
                </div>
                <div class="portfolio-info">
                    <span class="portfolio-category">Mobil Uygulama</span>
                    <h4>Fitness Tracker App</h4>
                    <div class="portfolio-tags">
                        <span class="portfolio-tag">Flutter</span>
                        <span class="portfolio-tag">Firebase</span>
                        <span class="portfolio-tag">Dart</span>
                    </div>
                </div>
            </div>

            <!-- Project 3 - SaaS -->
            <div class="portfolio-item portfolio-card" data-category="saas" data-aos="fade-up" data-aos-delay="200">
                <div class="portfolio-image">
                    <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=400&fit=crop"
                         alt="Analytics Dashboard">
                    <div class="portfolio-overlay">
                        <button type="button" class="btn-icon" data-bs-toggle="modal"
                                data-bs-target="#projectModal3">
                            <i class="fas fa-eye"></i>
                        </button>
                        <a href="#" target="_blank" class="btn-icon"><i class="fas fa-external-link-alt"></i></a>
                    </div>
                </div>
                <div class="portfolio-info">
                    <span class="portfolio-category">Micro SaaS</span>
                    <h4>Analytics Dashboard</h4>
                    <div class="portfolio-tags">
                        <span class="portfolio-tag">Vue.js</span>
                        <span class="portfolio-tag">Python</span>
                        <span class="portfolio-tag">PostgreSQL</span>
                    </div>
                </div>
            </div>

            <!-- Project 4 - Web -->
            <div class="portfolio-item portfolio-card" data-category="web" data-aos="fade-up">
                <div class="portfolio-image">
                    <img src="https://images.unsplash.com/photo-1467232004584-a241de8bcf5d?w=600&h=400&fit=crop"
                         alt="Corporate Website">
                    <div class="portfolio-overlay">
                        <a href="#" class="btn-icon"><i class="fas fa-eye"></i></a>
                        <a href="#" target="_blank" class="btn-icon"><i class="fas fa-external-link-alt"></i></a>
                    </div>
                </div>
                <div class="portfolio-info">
                    <span class="portfolio-category">Web Sitesi</span>
                    <h4>Kurumsal Web Sitesi</h4>
                    <div class="portfolio-tags">
                        <span class="portfolio-tag">Next.js</span>
                        <span class="portfolio-tag">Tailwind</span>
                        <span class="portfolio-tag">Sanity</span>
                    </div>
                </div>
            </div>

            <!-- Project 5 - Mobile -->
            <div class="portfolio-item portfolio-card" data-category="mobile" data-aos="fade-up"
                 data-aos-delay="100">
                <div class="portfolio-image">
                    <img src="https://images.unsplash.com/photo-1563986768609-322da13575f3?w=600&h=400&fit=crop"
                         alt="Banking App">
                    <div class="portfolio-overlay">
                        <a href="#" class="btn-icon"><i class="fas fa-eye"></i></a>
                        <a href="#" target="_blank" class="btn-icon"><i class="fas fa-external-link-alt"></i></a>
                    </div>
                </div>
                <div class="portfolio-info">
                    <span class="portfolio-category">Mobil Uygulama</span>
                    <h4>Finans Yönetim App</h4>
                    <div class="portfolio-tags">
                        <span class="portfolio-tag">React Native</span>
                        <span class="portfolio-tag">Redux</span>
                        <span class="portfolio-tag">Node.js</span>
                    </div>
                </div>
            </div>

            <!-- Project 6 - SaaS -->
            <div class="portfolio-item portfolio-card" data-category="saas" data-aos="fade-up" data-aos-delay="200">
                <div class="portfolio-image">
                    <img src="https://images.unsplash.com/photo-1611224923853-80b023f02d71?w=600&h=400&fit=crop"
                         alt="Task Management">
                    <div class="portfolio-overlay">
                        <a href="#" class="btn-icon"><i class="fas fa-eye"></i></a>
                        <a href="#" target="_blank" class="btn-icon"><i class="fas fa-external-link-alt"></i></a>
                    </div>
                </div>
                <div class="portfolio-info">
                    <span class="portfolio-category">Micro SaaS</span>
                    <h4>Task Management Tool</h4>
                    <div class="portfolio-tags">
                        <span class="portfolio-tag">React</span>
                        <span class="portfolio-tag">GraphQL</span>
                        <span class="portfolio-tag">AWS</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagination -->
        <div class="pagination-wrapper">
            <button class="pagination-btn" id="prevPage">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="pagination-btn active">1</button>
            <button class="pagination-btn">2</button>
            <button class="pagination-btn">3</button>
            <button class="pagination-btn" id="nextPage">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</section>

<!-- PROJECT MODAL 1 -->
<div class="modal fade" id="projectModal1" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">E-Ticaret Platformu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=500&fit=crop"
                     alt="E-Commerce" class="img-fluid rounded mb-4">
                <h5>Proje Hakkında</h5>
                <p>
                    Modern ve performanslı bir e-ticaret platformu. Kullanıcı dostu arayüz, güvenli ödeme
                    entegrasyonu ve gerçek zamanlı stok yönetimi özellikleri.
                </p>
                <h5 class="mt-4">Teknolojiler</h5>
                <div class="portfolio-tags">
                    <span class="portfolio-tag">React</span>
                    <span class="portfolio-tag">Node.js</span>
                    <span class="portfolio-tag">MongoDB</span>
                    <span class="portfolio-tag">Stripe</span>
                    <span class="portfolio-tag">Redux</span>
                </div>
                <div class="mt-4 d-flex align-items-center gap-3">
                    <a href="#" class="btn-primary-custom"><i class="fas fa-external-link-alt me-2"></i>Demo</a>
                    <a href="#" class="btn-outline-custom"><i class="fab fa-github me-2"></i>GitHub</a>
                    <a href="project-detail.html" class="btn-outline-custom">
                        <i class="fas fa-info-circle me-2"></i>Proje Detayları
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PROJECT MODAL 2 -->
<div class="modal fade" id="projectModal2" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Fitness Tracker App</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <img src="https://images.unsplash.com/photo-1512941937669-90a1b58e7e9c?w=800&h=500&fit=crop"
                     alt="Fitness App" class="img-fluid rounded mb-4">
                <h5>Proje Hakkında</h5>
                <p>
                    Kullanıcıların günlük aktivitelerini, kalorilerini ve antrenman programlarını takip edebileceği
                    kapsamlı bir mobil uygulama. Gerçek zamanlı veri senkronizasyonu ve gelişmiş grafikler içerir.
                </p>
                <h5 class="mt-4">Teknolojiler</h5>
                <div class="portfolio-tags">
                    <span class="portfolio-tag">Flutter</span>
                    <span class="portfolio-tag">Firebase</span>
                    <span class="portfolio-tag">Dart</span>
                    <span class="portfolio-tag">Google Fit API</span>
                </div>
                <div class="mt-4 d-flex align-items-center gap-3">
                    <a href="#" class="btn-primary-custom"><i class="fas fa-external-link-alt me-2"></i>Demo</a>
                    <a href="#" class="btn-outline-custom"><i class="fab fa-github me-2"></i>GitHub</a>
                    <a href="project-detail.html" class="btn-outline-custom">
                        <i class="fas fa-info-circle me-2"></i>Proje Detayları
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PROJECT MODAL 3 -->
<div class="modal fade" id="projectModal3" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Analytics Dashboard</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=500&fit=crop"
