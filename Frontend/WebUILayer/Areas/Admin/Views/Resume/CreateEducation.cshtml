@model CreateEducationDto
@{
    ViewData["Title"] = "CreateEducation";
    ViewData["BodyClass"] = "resume-editor-page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card editor-card">
    <div class="card-header">
        <h3 id="formTitle">Deneyim Bilgileri</h3>
    </div>

    <form asp-action="CreateEducation" method="post" id="resumeForm">
        <!-- Hidden input to store type (Experience/Education/Certificate) -->
        <input type="hidden" id="entryType" value="Okul Bilgisi">
        <input type="hidden" id="entryId" value="">

        <div class="form-row">
            <div class="form-group">
                <label>Tür</label>
                <input type="text" class="form-control" id="displayType" value="Okul Bilgisi" disabled>
            </div>
            <div class="form-group">
                <label>Sıralama</label>
                <input type="number" asp-for="DisplayOrder" class="form-control" id="displayOrder" placeholder="0" min="0">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label id="labelPosition">Pozisyon / Bölüm *</label>
                <input type="text" class="form-control" id="inputPosition"
                       asp-for="EducationDegree">
                <span asp-validation-for="EducationDegree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label id="labelCompany">Şirket / Okul / Kurum *</label>
                <input type="text" class="form-control" id="inputCompany" asp-for="EducationSchoolName" placeholder="Örn: TechCorp">
                <span asp-validation-for="EducationSchoolName" class="text-danger"></span>
            </div>
        </div>

       

        <div class="form-row">
            <div class="form-group">
                <label>Başlangıç Tarihi *</label>
                <input type="month" class="form-control" asp-for="EducationStartDate" id="inputStartDate" lang="tr">
                <span asp-validation-for="EducationStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Bitiş Tarihi</label>
                <input type="month" class="form-control" asp-for="EducationFinishDate" id="inputEndDate"
                       placeholder="Boş bırakılırsa 'Devam Ediyor'" lang="tr">
                <span asp-validation-for="EducationFinishDate" class="text-danger"></span>
                <small class="form-text text-muted">Devam ediyorsa boş bırakınız.</small>
            </div>
        </div>

        <div class="form-row full">
            <div class="form-group">
                <label>Açıklama</label>
                <textarea class="form-control min-h-150" asp-for="EducationDescription" id="inputDescription"
                          placeholder="Görev ve sorumluluklarınız..."></textarea>
                <span asp-validation-for="EducationDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline">İptal</a>

            <!-- Restore button only shows up when editing a deleted item (logic in JS) -->
            <button type="button" class="btn btn-warning hidden" id="btnRestore">
                <i class="fas fa-undo"></i> Geri Yükle
            </button>
        </div>
    </form>
</div>


