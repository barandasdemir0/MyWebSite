@using WebUILayer.Areas.Admin.ViewComponents

@{
    ViewData["Title"] = "Index";
    ViewData["BodyClass"] = "blogpost-page"; // <-- BUNU EKLE
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Styles {

    <link rel="stylesheet" href="/Mytheme/admin/css/modules/blog.css">
    <link rel="stylesheet" href="/Mytheme/admin/css/modules/messages.css">
    <link rel="stylesheet" href="/Mytheme/admin/css/modules/modal.css">
}


<!-- Blog Posts Table -->
<div class="card">
    <div class="card-header">
        <h3>Tüm Yazılar</h3>
        <form method="get" asp-action="Index">
            <div class="filter-container">
                <select name="TopicId" class="form-control filter-select">
                    <option>Tüm Kategoriler</option>
                    @if (Model.topicDtos != null)
                    {
                        @foreach (var item in Model.topicDtos)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }

                </select>

                <button type="submit" class="btn btn-secondary btn-sm" title="Filtrele">
                    <i class="fas fa-filter"></i>
                </button>
                <a asp-action="Create" class="btn btn-primary btn-gap">
                    <i class="fas fa-plus"></i>
                    Yeni Yazı
                </a>
                <input type="text" class="form-control filter-search" placeholder="Ara...">
            </div>

        </form>
    </div>

    <div class="table-responsive">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Okuma Süresi</th>
                    <th>Görünürlük</th>
                    <th>Durum</th>
                    <th>Yayın Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.blogPostDtos)
                {

                    if (item.IsDeleted == true)
                    {
                        <tr class="deleted-item">
                            <td><strong>@item.Title</strong></td>
                            <td>@string.Join(", ", item.Topics)</td>
                            <td>@item.ReadTime dk</td>
                            <td><span class="status-badge danger">Silindi</span></td>
                            <td><span class="status-badge draft">Taslak</span></td>
                            <td>@(item.PublishedAt?.AddHours(3).ToString("dd MMM yyyy HH:mm") ?? "-")</td>
                            <td>
                                <div class="action-btns">
                                    <a href="blog-editor.html?view=true&deleted=true" class="action-btn"
                                       title="Görüntüle"><i class="fas fa-eye"></i></a>
                                    <a class="action-btn edit hidden"
                                       title="Detaylar"><i class="fas fa-pen"></i></a>
                                    <form asp-action="Delete" asp-route-guid="@item.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="button" class="action-btn delete hidden" title="Sil" data-action="deleteRow">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>


                                    <form asp-action="Restore" asp-route-guid="@item.Id" method="post">
                                        <button type="button" class="action-btn restore" title="Geri Yükle" data-action="restoreRow">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    else if (item.IsPublished == false)
                    {
                        <tr>
                            <td><strong>@item.Title</strong></td>
                            <td>@string.Join(",", item.Topics)</td>
                            <td>@item.ReadTime dk</td>
                            <td><span class="status-badge draft">Sitede Aktif Değil</span></td>
                            <td><span class="status-badge draft">Taslak</span></td>
                            <td>@(item.PublishedAt?.AddHours(3).ToString("dd MMM yyyy HH:mm") ?? "-")</td>

                            <td>
                                <div class="action-btns">
                                    <a href="blog-editor.html?view=true" class="action-btn" title="Görüntüle">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Update" asp-route-guid="@item.Id" class="action-btn edit" title="Düzenle">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-guid="@item.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="button" class="action-btn delete" title="Sil" data-action="deleteRow">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>


                                    <form asp-action="Restore" asp-route-guid="@item.Id" method="post">
                                        <button type="button" class="action-btn restore hidden" title="Geri Yükle" data-action="restoreRow">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    else if (item.IsDeleted == false)
                    {
                        <tr>
                            <td><strong>@item.Title</strong></td>
                            <td>@string.Join(",", item.Topics)</td>
                            <td>@item.ReadTime dk</td>
                            <td><span class="status-badge active">Sitede Aktif</span></td>
                            <td><span class="status-badge active">Yayında</span></td>
                            <td>@(item.PublishedAt?.AddHours(3).ToString("dd MMM yyyy HH:mm") ?? "-")</td>

                            <td>

                                <div class="action-btns">
                                    <a href="blog-editor.html?view=true" class="action-btn" title="Görüntüle">
                                        <i class="fas fa-eye"></i>
                                    </a>


                                    <a asp-action="Update" asp-route-guid="@item.Id" class="action-btn edit" title="Düzenle">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-guid="@item.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="button" class="action-btn delete" title="Sil" data-action="deleteRow">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>


                                    <form asp-action="Restore" asp-route-guid="@item.Id" method="post">
                                        <button type="button" class="action-btn restore hidden" title="Geri Yükle" data-action="restoreRow">
                                            <i class="fas fa-undo"></i>
                                        </button>
                                    </form>
                                </div>

                            </td>
                        </tr>

                    }




                }





            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @await Component.InvokeAsync("_LayoutPaginationPartialComponent", new { currentPage = Model.CurrentPage, totalPages = Model.TotalPages })




</div>

<!-- Add/Edit Blog Post Form -->
<!-- Restore Modal Template -->
<div id="restoreModal" class="admin-modal-overlay">
    <div class="admin-modal">
        <div class="modal-header">
            <div class="modal-icon modal-icon-restore">
                <i class="fas fa-undo"></i>
            </div>
            <div class="modal-title">Geri Yükle</div>
        </div>
        <div class="modal-body">
            <strong id="restoreItemName"></strong> isimli öğe geri yüklenecek ve sitede tekrar yayına
            alınacaktır.<br><br>
            Bu işlem geri alınamaz (tekrar silmeniz gerekir).
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" id="cancelRestore">İptal</button>
            <button class="btn btn-warning" id="confirmRestore">Onayla ve Yükle</button>
        </div>
    </div>
</div>





@section Scripts {
    <script src="/Mytheme/admin/js/theme-init.js" defer></script>
    <script src="/Mytheme/admin/js/modules/blog.js" defer></script>
}