@model WebUILayer.Areas.Admin.Models.DashboardIndexViewModel
@{
    ViewData["Title"] = "Index";
    ViewData["BodyClass"] = "index-page dashboard-page-mod";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section styles{
    <link rel="stylesheet" href="/Mytheme/Admin/css/modules/index.css">
}

<!-- Stats -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon projects">
            <i class="fas fa-folder-open"></i>
        </div>
        <div class="stat-info">
            <h3>12</h3>
            <p>Toplam Proje</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon blog">
            <i class="fas fa-file-alt"></i>
        </div>
        <div class="stat-info">
            <h3>8</h3>
            <p>Blog Yazısı</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon visitors">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-info">
            <h3>1,248</h3>
            <p>Bu Ay Ziyaretçi</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon messages">
            <i class="fas fa-envelope"></i>
        </div>
        <div class="stat-info">
            <h3>24</h3>
            <p>Yeni Mesaj</p>
        </div>
    </div>
</div>

<!-- Content Grid (New Strict Grid Layout) -->
<div class="content-grid dashboard-grid-layout">
    <!-- 1. Projects Card -->
    <div class="card card-projects">
        <div class="card-header">
            <h3>Son Projeler</h3>
            <a href="projects.html" class="btn btn-sm btn-outline">Tümünü Gör</a>
        </div>
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Proje Adı</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.projectListDtos.TakeLast(3))
                    {
                       
                            <tr>
                                <td>@item.Name</td>
                            <td>@string.Join(", ", item.Topics)</td>
                                <td><span class="status-badge active">Yayında</span></td>
                            </tr>
                      
                      
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- 2. Blogs Card -->
    <div class="card card-blogs">
        <div class="card-header">
            <h3>Son Blog Yazıları</h3>
            <a href="blog.html" class="btn btn-sm btn-outline">Tümünü Gör</a>
        </div>
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.blogPostListDtos)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@string.Join(", ", item.Topics)</td>
                           
                                <td><span class="status-badge active">Yayında</span></td>
                          
                          
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
    </div>

    <!-- 3. Quick Actions Card (Full Height) -->
    <div class="card quick-actions-card">
        <div class="card-header">
            <h3>Hızlı İşlemler</h3>
        </div>
        <div class="quick-actions">
            <a href="projects.html?action=new" class="quick-action-btn">
                <i class="fas fa-plus"></i>
                <div>
                    <strong>Yeni Proje Ekle</strong>
                    <p>Portfolio'ya yeni proje</p>
                </div>
            </a>
            <a href="blog.html?action=new" class="quick-action-btn">
                <i class="fas fa-pen"></i>
                <div>
                    <strong>Blog Yazısı Yaz</strong>
                    <p>Yeni makale oluştur</p>
                </div>
            </a>
            <a href="messages.html?action=new" class="quick-action-btn">
                <i class="fas fa-paper-plane"></i>
                <div>
                    <strong>Mesaj Gönder</strong>
                    <p>Hızlı e-posta gönder</p>
                </div>
            </a>
            <a href="categories.html" class="quick-action-btn">
                <i class="fas fa-tags"></i>
                <div>
                    <strong>Kategori Yönetimi</strong>
                    <p>Etiketleri düzenle</p>
                </div>
            </a>
            <a href="github.html" class="quick-action-btn">
                <i class="fab fa-github"></i>
                <div>
                    <strong>Github Senkronizasyonu</strong>
                    <p>Repoları güncelle</p>
                </div>
            </a>
            <a href="settings.html" class="quick-action-btn">
                <i class="fas fa-toggle-on"></i>
                <div>
                    <strong>Müsaitlik Durumu</strong>
                    <p>Şu an: <span class="status-text">Müsait</span></p>
                </div>
            </a>
        </div>
    </div>

    <!-- 4. Comments Card -->
    <div class="card card-comments">
        <div class="card-header">
            <h3>Son Yorumlar</h3>
            <a href="guestbook.html" class="btn btn-sm btn-outline">Tümü</a>
        </div>
        <div class="dashboard-list">
            <div class="dashboard-item">
                <div class="item-content">
                    <strong class="item-name">Mehmet K.</strong>
                    <p class="item-text">"Yazınızdaki CSS grid örnekleri çok faydalı oldu..."</p>
                </div>
            </div>
            <div class="dashboard-item">
                <div class="item-content">
                    <strong class="item-name">Ayşe Y.</strong>
                    <p class="item-text">"Link kırık görünüyor, kontrol edebilir misiniz?"</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 5. Messages Card -->
    <div class="card card-messages">
        <div class="card-header">
            <h3>Son Mesajlar</h3>
            <a href="messages.html" class="btn btn-sm btn-outline">Tümü</a>
        </div>
        <div class="dashboard-list">
            <div class="dashboard-item message-item">
                <div class="message-avatar avatar-blue">AD</div>
                <div class="item-content">
                    <div class="item-header">
                        <strong class="item-name">Ali Demir</strong>
                        <span class="item-meta">2s</span>
                    </div>
                    <span class="item-text">Freelance iş teklifi hakkında görüşmek...</span>
                </div>
            </div>
            <div class="dashboard-item message-item">
                <div class="message-avatar avatar-green">ZO</div>
                <div class="item-content">
                    <div class="item-header">
                        <strong class="item-name">Zeynep O.</strong>
                        <span class="item-meta">1g</span>
                    </div>
                    <span class="item-text">Merhaba, sitenizi çok beğendim...</span>
                </div>
            </div>
        </div>
    </div>
</div>
