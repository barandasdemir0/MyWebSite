@model List<SocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="/Mytheme/admin/css/modules/table-variations.css">
}
<div class="card mt-25">
    <div class="card-header">
        <h3>Sosyal Medya Hesapları</h3>
        <div class="header-actions-right">
            <input type="text" id="tableSearch" class="form-control filter-search" placeholder="Ara...">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Hesap
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>İcon</th>
                    <th>Sosyal Medya Hesabı</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    if (item.IsDeleted == true)
                    {
                        <tr class="deleted-item">
                            <td data-label="Kullanıcı">
                                <div class="user-cell">

                                    <span class="iconify"
                                          data-icon="@item.SocialMediaIcon"
                                          data-width="48"
                                          data-height="48"></span>
                                    <div class="user-cell-info">
                                        <div class="font-bold text-deleted">@item.SocialMediaName</div>
                                    </div>
                                </div>
                        
                            </td>
                           
                            <td data-label="Hesap">@item.SocialMediaName</td>
                            <td data-label="Durum"><span class="status-badge danger">Pasif</span></td>
                            <td data-label="İşlemler">
                                <div class="action-btns">
                                    <form asp-action="Restore" asp-route-guid="@item.Id" method="post">
                                        <button type="submit" class="action-btn restore" title="Geri Yükle"><i class="fas fa-undo"></i></button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                    else if (item.IsDeleted == false)
                    {
                        <tr>
                            <td data-label="Kullanıcı">
                                <div class="user-cell">

                                    <span class="iconify"
                                          data-icon="@item.SocialMediaIcon"
                                          data-width="48"
                                          data-height="48"></span>

                                    <div class="user-cell-info">
                                        <div class="font-bold text">@item.SocialMediaName</div>
                                    </div>
                                </div>
                               
                            </td>
                          
                            <td data-label="Hesap">@item.SocialMediaName</td>
                            <td data-label="Durum"><span class="status-badge active">Aktif</span></td>
                            <td data-label="İşlemler">
                                <div class="action-btns">
                                    <a asp-action="Update" asp-route-guid="@item.Id" class="action-btn edit" title="Düzenle"><i class="fas fa-pen"></i></a>
                                    <form asp-action="Delete" asp-route-guid="@item.Id" method="post">
                                        <button type="submit" class="action-btn delete" title="Sil"><i class="fas fa-trash"></i></button>
                                    </form>
                                    
                                </div>
                            </td>
                        </tr>
                    }
                }



            </tbody>
        </table>
    </div>
</div>
<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="admin-modal-overlay">
    <div class="admin-modal">
        <div class="modal-header">
            <div class="modal-icon modal-icon-delete">
                <i class="fas fa-trash"></i>
            </div>
            <div class="modal-title">Silme Onayı</div>
        </div>
            <input type="hidden" name="Id" id="deleteIdInput">
            <div class="modal-body">
                <strong id="deleteItemName"></strong> silinsin mi?<br><br>
                Bu işlem geri alınamaz.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelDelete">İptal</button>
                <button type="submit" class="btn btn-danger">Evet, Sil</button>
            </div>
    </div>
</div>


<!-- Restore Modal -->
<div id="restoreModal" class="admin-modal-overlay">
    <div class="admin-modal">
        <div class="modal-header">
            <div class="modal-icon modal-icon-restore">
                <i class="fas fa-undo"></i>
            </div>
            <div class="modal-title">Geri Yükle</div>
        </div>
      
            <div class="modal-body">
                <strong id="restoreItemName"></strong> geri yüklensin mi?
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" id="cancelRestore">İptal</button>
                <button class="btn btn-warning" id="confirmRestore">Geri Yükle</button>
            </div>
    </div>
</div>

@section scripts {
    <script src="/Mytheme/admin/js/modules/table-previews.js"></script>
}

